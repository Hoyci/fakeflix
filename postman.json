    "name": "Fakeflix API - Full Workflow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Coleção completa para criar e fazer streaming de vídeos na Fakeflix API."
  },
  "item": [
    {
      "name": "Create New Movie",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "title",
              "value": "A Odisséia do Streaming",
              "type": "text"
            },
            {
              "key": "description",
              "value": "Um épico sobre bytes viajando pela rede para chegar até a sua tela.",
              "type": "text"
            },
            {
              "key": "video",
              "type": "file",
              "src": []
            },
            {
              "key": "thumbnail",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/movies",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "movies"
          ]
        },
        "description": "Cria um novo conteúdo do tipo Movie. Após executar esta requisição, você precisará obter o ID do vídeo criado no seu banco de dados e colocá-lo na variável de coleção `videoID` para testar o streaming."
      },
      "response": []
    },
    {
      "name": "Video Streaming",
      "item": [
        {
          "name": "Stream Video (Partial Content)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Range",
                "value": "bytes=0-1048575",
                "description": "Solicita o primeiro 1MB do arquivo. O servidor deve responder com o status 206 Partial Content."
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/videos/{{videoID}}/stream",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "videos",
                "{{videoID}}",
                "stream"
              ]
            },
            "description": "Testa o streaming de um pedaço do vídeo. Utilize um `videoID` válido obtido após a criação de um filme."
          },
          "response": []
        },
        {
          "name": "Get Video (Full Content)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Range",
                "value": "bytes=0-1048575",
                "disabled": true,
                "description": "O cabeçalho Range está presente mas desabilitado. O servidor deve enviar o arquivo completo com o status 200 OK."
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/videos/{{videoID}}/stream",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "videos",
                "{{videoID}}",
                "stream"
              ]
            },
            "description": "Testa o download do arquivo de vídeo completo. Utilize um `videoID` válido obtido após a criação de um filme."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "videoID",
      "value": "COLE_O_ID_DO_VIDEO_AQUI"
    }
  ]
}
